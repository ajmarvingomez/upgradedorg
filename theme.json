{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"custom": {
			":hover": {
				"opacity": "0.5"
			}
		},
		"dimensions": {
			"aspectRatio": true
		},
		"border": {
			"color": true,
			"width": true
		},
		"layout": {
			"contentSize": "900px",
			"wideSize": "1100px"
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		},
		"color": {
			"background": true,
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"gradients": [],
			"link": true,
			"palette": [
				{ "color": "#EC1F27", "name": "DSA Red", "slug": "dsa-red" },
				{
					"color": "#F04C53",
