					"slug": "dsa-red-4"
				},
				{
					"color": "#231F20",
					"name": "DSA Black",
					"slug": "dsa-black"
				},
				{
					"color": "#3B3838",
					"name": "DSA Black Tint 1",
					"slug": "dsa-black-1"
				},
				{
					"color": "#605C5C",
					"name": "DSA Black Tint 2",
					"slug": "dsa-black-2"
				},
				{
					"color": "#8C8989",
					"name": "DSA Black Tint 3",
					"slug": "dsa-black-3"
				},
				{
					"color": "#C1C0BF",
					"name": "DSA Black Tint 4",
					"slug": "dsa-black-4"
				},
				{ "color": "#FFFFFF", "name": "White", "slug": "dsa-white" }
			],
			"duotone": [
				{
					"colors": ["#EC1F27", "#231F20"],
					"slug": "dsa-red-black",
					"name": "DSA Red and Black"
				},
				{
					"colors": ["#F04C53", "#3B3838"],
					"slug": "dsa-red-black-1",
					"name": "DSA Red and Black Tint 1"
				},
				{
					"colors": ["#F4797E", "#605C5C"],
					"slug": "dsa-red-black-2",
					"name": "DSA Red and Black Tint 2"
				},
				{
					"colors": ["#F7A5A9", "#8C8989"],
					"slug": "dsa-red-black-3",
					"name": "DSA Red and Black Tint 3"
				},
				{
					"colors": ["#FBD2D4", "#C1C0BF"],
					"slug": "dsa-red-black-4",
					"name": "DSA Red and Black Tint 4"
				}
			],
			"text": true
		},
		"typography": {
