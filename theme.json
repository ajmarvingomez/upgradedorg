				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)"
		},
		"elements": {
			"link": {
				"css": "&:hover{ color: var(--wp--preset--color--dsa-red-3) !important; }",
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "0px"
				},
				"css": "&:hover{ background-color: var(--wp--preset--color--dsa-red-3) !important; \n box-shadow: 2px 2px 4px var(--wp--preset--color--dsa-black-1); }",
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"spacing": {
					"padding": {
						"left": "1rem",
						"right": "1rem"
					}
				}
			}
		}
	}
}
