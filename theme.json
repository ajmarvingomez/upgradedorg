						{
							"fontFamily": "Klima",
							"fontWeight": "600 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"fontDisplay": "swap",
							"src": [
								"file:./assets/fonts/klima/klima-medium-web.woff2"
							]
